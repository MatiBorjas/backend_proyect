<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <link rel="stylesheet" href="/styles.css" />
  <title>Proyecto Backend</title>
</head>

<body class="d-flex flex-column min-vh-100">

  <header>
    <%- include('../partials/navbar')%>
  </header>

  <div class=" container d-flex flex-column w-50 my-2">
    <h1 class="text-center text-uppercase mt-5"> BIENVENIDO <%= user.name%>
    </h1>
    <div class="d-flex flex-row justify-content-center align-items-center">
      <img src="/uploads/<%=user.image%>" style="height: 250px;">
      <div>
        <h2 class=" text-uppercase">
          <%= user.name %>
        </h2>
        <p>Edad: <%= user.age %>
        </p>
        <p>Direccion: <%= user.address %>
        </p>
        <p>Numero: <%= user.phone %>
        </p>
        </p>
        <p>Email: <%= user.username %>
        </p>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous">
    </script>
  <footer class="mt-auto footer">
    <%- include('../partials/footer')%>
  </footer>
  <script src="/js/navBarValidate.js"></script>
</body>

</html>