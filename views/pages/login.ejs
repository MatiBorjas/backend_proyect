<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <link rel="stylesheet" type="text/css" href="/styles.css" />
  <title>Proyecto Backend</title>
</head>

<body class="d-flex flex-column min-vh-100">
  <header>
    <%- include('../partials/navbar')%>
  </header>
  <div
    class="container d-flex flex-column col-sm-6 col-md-6 col-xl-3 mt-auto bg-primary bg-opacity-10 p-5 rounded box-content">
    <h1 class="text-center text-uppercase">BIENVENIDO
    </h1>

    <h3 id="div-compres" class="text-center"></h3>

    <form action="" method="post" onsubmit="return continueornot()">
      <div id="login-div" class="d-flex flex-column align-items-center">
        <input type="text" id="username" name="username" class="form-control m-1" value=""
          placeholder="Ingrese su email" />
        <input type="password" id="password" name="password" class="form-control  m-1" value=""
          placeholder="Ingreese su contraseña" autocomplete="off" />
        <div>
          <input type="checkbox" id="show-password"> Mostrar Contraseña
        </div>
      </div>
      <div class="d-flex flex-row justify-content-center text-center col-12 mt-2">
        <button type="submit" id="login-btn" class="btn btn-success col-sm-6 m-1">
          Ingresar
        </button>
      </div>
    </form>

    <div class="d-flex flex-column align-items-center text-center col-12 mt-2">
      <div>No posee una cuenta ?</div>
      <button onclick="location.href='/signup'" class="btn btn-primary col-sm-6 ">
        Registrarse
      </button>
    </div>

  </div>

  <footer class="mt-auto footer">
    <%- include('../partials/footer')%>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <script src="/js/validateEmail.js"></script>
  <script src="/js/showPassword.js"></script>

</body>

</html>