<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <link rel="stylesheet" href="/styles.css" />

  <title>Proyecto BackEnd</title>
  <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
</head>

<body class="d-flex flex-column min-vh-100">
  <header>
    <%- include('../partials/navbar')%>
  </header>
  <div class="container d-flex flex-column w-50 my-2">
    <h2 class="text-center">TU CARRITO</h2>
    <h3 class="text-center">
      <% if(cartValid) { %>
        Carrito ID = <%=cart._id%>
          <% } %>
    </h3>

    <table class="table my-1">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Imagen</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody id="productsTable">
        <% if (cart.products) { %>
          <% cart.products.forEach((element)=> { %>
            <tr>
              <td style="text-transform: uppercase">
                <%=element.id%>
              </td>
              <td style="text-transform: uppercase">
                <%=element.name%>
              </td>
              <td>
                $<%=element.price%>
              </td>
              <td>
                <img src="<%=element.thumbnail%>" class="w-50" alt="..." />
              </td>
              <td>
                <!-- <button class="btn btn-danger" onclick="alert(`Todavia no funciona`)">Sacar del carrito</button> -->
                <button class="btn btn-danger" value="<%=element.id%>" onclick="deleteProd(event)">Sacar del
                  carrito</button>
              </td>
            </tr>
            <%} )%>
              <% }%>
      </tbody>
    </table>
    <div class="d-flex flex-row justify-content-center">

      <form action="/cart" method="POST">
        <button type="submit" class="btn btn-success " onclick="">Finalizar Compra</button>
      </form>
    </div>
  </div>

  <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
  <script src="/js/navBarValidate.js"></script>

  <footer class="mt-auto footer">
    <%- include('../partials/footer')%>
  </footer>
</body>

<script src="/js/deleteProd.js">
</script>

</html>